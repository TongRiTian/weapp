page{
  padding-top: 10rpx; 
  padding-bottom: 10rpx; 
  box-sizing: border-box;
  background: #e9e9e9;
}
.container{
  height: 100%;
  background: #fff;
}
.user{
  display: flex;
  flex-direction: column;
}

.avatar{
  width: 220rpx;
  height: 220rpx;
  background: #ccc;
  align-self: center;
  margin: 20rpx 0;
}
.user-info{
  padding: 0 40rpx;
}
.info-item{
  padding: 32rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ccc;
  color: #999;
  display: flex;
}
.info-item text:first-child{
  color: #000;
  width: 150rpx;
}