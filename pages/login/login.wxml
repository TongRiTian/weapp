<view class="login">
  <form bindsubmit="login">
    <view class="main">
      <view class="input">
        <view class="input-item">
          <!-- <text>手机号</text> -->
          <input name="userName" placeholder="手机号" type="number" />
        </view>
        <view class="input-item">
          <!-- <text>登录密码</text> -->
          <input name="password" placeholder="登录密码" type="password" />
        </view>
      </view>
      <view class="forget" bindtap="forgetPswd">忘记密码</view>
      <button form-type="submit">登录</button>
    </view>
  </form>
</view>